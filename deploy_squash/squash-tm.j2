# Default settings for Squash. This file is sourced by /bin/bash.

# Extra arguments passed to JVM
JAVA_ARGS="-Xms128m -Xmx1024m -XX:MaxPermSize=128m -Djava.awt.headless=true"

# Port for HTTP connector 
HTTP_PORT=8080 

# DataBase parameters
# DB_URL="jdbc:mysql://localhost:3306/squashtm" or "jdbc:postgresql://localhost:5432/squashtm"
DB_URL="jdbc:mysql://localhost:3306/{{ db_name }}" 
# DB_TYPE="mysql" or DB_TYPE="postgresql"
DB_TYPE="mysql" 
DB_USERNAME="{{ user_name }}" 
DB_PASSWORD="{{ user_passwd }}" 
